{
  "manifest_version": 3,
  "default_locale": "en",
  "name": "MinTool",
  "version": "2.2.4",
  "author": "Min <the7mincheol@gmail.com>",
  "description": "Toolbox for anything",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": ["declarativeNetRequest", "activeTab", "contextMenus"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "adblock_rules",
        "enabled": true,
        "path": "rules/adblock-rules.json"
      }
    ]
  },
  "content_scripts": [
    {
      "js": ["lib/global.js", "lib/toastify.js"],
      "matches": ["<all_urls>"],
      "world": "MAIN",
      "run_at": "document_start"
    },
    {
      "js": [
        "lib/global.js",
        "lib/components.js",
        "lib/log.js",
        "lib/wait-for-element.js",
        "lib/dom-utils.js",
        "lib/toastify.js",
        "lib/dom-eraser.js",
        "lib/vue-min.js"
      ],
      "matches": ["<all_urls>"]
    },
    {
      "js": [
        "lib/github/github-context.js",
        "lib/github/github-auto-refresh.js",
        "lib/github/github-notification-filters.js",
        "lib/github/github-comment-shortcut.js",
        "lib/github/github-shortcut.js",
        "lib/github/github-pr-commit-auto-embed.js"
      ],
      "matches": ["<all_urls>"]
    },
    {
      "js": ["scripts/ad-block.js"],
      "matches": ["<all_urls>"]
    },
    {
      "js": ["scripts/github.js"],
      "matches": ["https://github.com/*"]
    },
    {
      "js": ["scripts/tossinvest.js"],
      "matches": ["https://tossinvest.com/*"]
    },
    {
      "js": ["scripts/jira.js"],
      "matches": ["https://*.atlassian.net/*", "https://atlassian.net/*"]
    }
  ]
}
